@model FakeNews.web.Models.ViewModels.EditTagRequest
@{
}

	<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
			<h1>Edit Tag</h1>
		</div>
	</div>

<div class="container py-5">
	@if(Model != null)
	{
		<div class="col-12 col-md-6">
			<form method="post">
				<div class="mb-3">
					<label class="form-label">Id</label>
					<input type="text" id="id" class="form-control" asp-for="Id" readonly />
				</div>

				<div class="mb-3">
					<label class="form-label">Name</label>
					<input type="text" id="name" class="form-control" asp-for="Name" required />
				</div>
				<div class="mb-3">
					<label class="form-label">Display Name</label>
					<input type="text" id="displayName" class="form-control" asp-for="DisplayName" required />
				</div>

				<div class="mb-3">
					<div class="d-flex">
						<button type="submit" class="btn btn-dark">Save</button>
						<button  class="btn btn-secondary ms-2">
							Cancel
						</button>
					</div>
				</div>
			</form>
		</div>
	}
	else
	{
		<p>Tag not found, please <a asp-controller="AdminTags" asp-action="List">go back</a></p>
	}

</div>
